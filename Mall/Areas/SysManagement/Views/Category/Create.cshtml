@model Mall.Models.Category

@{
    ViewBag.Title = "Create";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<form method="post" action="@Url.Action("Create")" onsubmit="return validateCallback(this, dialogAjaxDone)">



    @Html.ValidationSummary(true)
<div class="pageFormContent">
        <p class="editor-field">
            @Html.LabelFor(model => model.CaName)
            @Html.EditorFor(model => model.CaName)
            @Html.ValidationMessageFor(model => model.CaName)
        </p>


        <p class="editor-field">
            @Html.LabelFor(model => model.PID)
            @Html.DropDownList("PID",(List<SelectListItem>)ViewBag.AllList)
            @Html.ValidationMessageFor(model => model.PID)
        </p>


        <p class="editor-field">
            @Html.LabelFor(model => model.Summary)
            @Html.EditorFor(model => model.Summary)
            @Html.ValidationMessageFor(model => model.Summary)
        </p>


        @*<p class="editor-field">
            @Html.LabelFor(model => model.Level)
            @Html.EditorFor(model => model.Level)
            @Html.ValidationMessageFor(model => model.Level)
        </p>*@


        <p class="editor-field">
            @Html.LabelFor(model => model.Status)
            @Html.EditorFor(model => model.Status)
            @Html.ValidationMessageFor(model => model.Status)
        </p>


        <p class="editor-field">
            @Html.LabelFor(model => model.Sort)
            @Html.EditorFor(model => model.Sort)
            @Html.ValidationMessageFor(model => model.Sort)
        </p>

        <p>
            <input type="submit" class="close" value="Create" />
        </p>
</div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
