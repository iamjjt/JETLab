@model Mall.ViewModels.ShoppingCartViewModel


@{
    ViewBag.Title = "SalerRoom";
}

@section HeadStyle{
    <link href="@Url.Content("~/css/saleroom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/buy.css")" rel="stylesheet" type="text/css" />
}
@section HeadScript{
    <script src="@Url.Content("~/Scripts/jquery.LoadImage.js")" type="text/javascript"></script>
}

<div id="container">
	<div class="page-shopcart">
      <table width="100%" border="0">
        <tr>
          <td align="right"><input type="button" class="btnBuy buyCur fb txt574841 mt20" value="去收银台结账" name="btnBuy" /></td>
        </tr>
        <tr>
          <td>
            <table class="tit-02 mt20" width="100%" border="0">
              <tr>
                <td width="20%" height="30" align="center" valign="middle">商品</td>
                <td>详细描述</td>
                <td width="15%">数量</td>
                <td width="15%">价格</td>
              </tr>
            </table>
			<ul class="shopcart">
                @foreach (var item in Model.CartItems)
                {
                    <li>
                        <table width="100%" border="0">
                            <tr>
                              <td width="20%" rowspan="4" align="center" valign="middle"><img src="res/16.jpg" width="72" height="110" /></td>
                              <td class="fb">@item.Good.Name</td>
                              <td width="15%" rowspan="2" align="center" valign="bottom"><label for="textfield"></label>
                              <input type="text" name="item-num" class="good-num" /></td>
                              @{ decimal itemTotal = item.Count * item.Good.MallPrice;}
                              <td width="15%" rowspan="2" align="center" valign="bottom"><span class="itemTotalPrice">@itemTotal</span></td>
                          </tr>
                            <tr>
                              <td>@item.Good.Summary</td>
                          </tr>
                            <tr>
                              <td>编号#：@item.Good.NO</td>
                              <td width="15%" rowspan="2" align="center" class="pt5"  valign="top"><a href="#" class="reCalculateItem">重新计算价格</a></td>
                              <td width="15%" rowspan="2" align="center" class="pt5" valign="top"><a href="#" class="delItem">删除此商品</a></td>
                          </tr>
                            <tr>
                              <td>装框制作周期：@item.PaintSize.Cycle</td>
                          </tr>
                        </table>
                    </li>
                }
           </ul>
           <div class="totalPrice">总计：￥4536.00</div>
          </td>
        </tr>
        <tr>
          <td align="right"><input type="button" class="btnBuy fb" value="继续购物" name="btnBuyOnlyPaint" />            <input type="button" class="btnBuy buyCur fb txt574841" value="去收银台结账" name="btnBuy2" /></td>
        </tr>
      </table>
  </div>

@section FooterScript{

 //图片垂直居中
            $(".pro-img .t-img img").each(function() {
                src = $(this).attr("src");
                $(this).LoadImage(true, 314, 479, "../images/other/loading.gif");
            })
            $(".ul-01 img").each(function() {
                src = $(this).attr("src");
                $(this).LoadImage(true, 98, 150, "../images/other/loading.gif");
            })

}
